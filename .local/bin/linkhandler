#!/bin/sh

# Opens links in default programs
# Useful for newsboat and shell aliases

# Usages:
# -------
# Automatic:
#   $ linkhandler "link"
# Manual:
#   $ linkhandler browser "link"
#   $ linkhandler dl "link"
#   $ linkhandler mpv "link"

ytdl_format="(bestvideo[height<=?1080]+bestaudio/best)"

cmd_imgviewer() {
    feh "$1"
}

cmd_webbrowser() {
    "$BROWSER" --new-window "$1"
}

cmd_mpv() {
    case "$1" in
        '') exit 1 ;;
        *mp3|*wav) setsid -f "$TERMINAL" -e mpv --no-audio-display "$1" ;;
        *) setsid -f mpv --no-terminal --ytdl-format="$ytdl_format" "$1"
    esac
}

cmd_ytdl() {
    yt-dlp -f "$ytdl_format" "$1"
}

case "$1" in
    browser|-b) cmd_webbrowser "$2" ;;
    dl|-d) cmd_ytdl "$2" ;;
    mpv|-m) cmd_mpv "$2" ;;
    *png|*jpg|*gif) cmd_imgviewer "$1" ;;
    *mp3|*wav|*youtu.be/*|*youtube.com/watch*|*mp4|*webm|*mkv) cmd_mpv "$1" ;;
    *) cmd_webbrowser "$1" ;;
esac