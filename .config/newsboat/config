browser "linkhandler '%u'"
macro b set browser "$BROWSER --new-window %u" ; open-in-browser ; set browser "linkhandler '%u'"
macro m set browser "setsid -f mpv --no-terminal --ytdl-format='(bestvideo[height<=?1080]+bestaudio/best)' %u" ; open-in-browser ; set browser "linkhandler '%u'"

